<p>
  <b>Login:</b>
  <%=h @user.login %>
</p>

<p>
  <b>Login count:</b>
  <%=h @user.login_count %>
</p>

<p>
  <b>Last request at:</b>
  <%=h @user.last_request_at %>
</p>

<p>
  <b>Last login at:</b>
  <%=h @user.last_login_at %>
</p>

<p>
  <b>Current login at:</b>
  <%=h @user.current_login_at %>
</p>

<p>
  <b>Last login ip:</b>
  <%=h @user.last_login_ip %>
</p>

<p>
  <b>Current login ip:</b>
  <%=h @user.current_login_ip %>
</p>


<hr/>

<h1>Breweries</h1>
<ul>
<% @breweries.each do |brewery| %>
  <li><%= link_to brewery.name, brewery_path( brewery ) %></li>
<% end %>
</ul>

<%= link_to 'Edit', edit_account_path if @current_user and @current_user == @user %>